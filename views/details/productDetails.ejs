<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= product.name %> - Product Details
    </title>
    <!-- Add your CSS stylesheets here -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Add Magnific Popup CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">
    <!-- Include Zoom.js stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/zoom.js/1.7.21/zoom.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }


        .thumbnail-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            margin-bottom: 20px;


        }

        .thumbnail {

            max-width: 45%;
            height: auto;
            border-radius: 8px;
            cursor: pointer;
            margin-right: 10px;
            margin-bottom: 10px;
            transition: transform 0.3s ease-in-out;

        }

        @media (max-width: 767px) {

            .thumbnail {
                margin-right: 0;

            }
        }


        .thumbnail:hover {
            transform: scale(1.05);
        }


        .breadcrumb {
            background-color: transparent;
            padding: 10px;
            margin-bottom: 20px;
            font-size: 20px;
        }

        .breadcrumb-item {
            font-size: 18px;
        }

        .breadcrumb-item+.breadcrumb-item::before {
            content: "â€º";
            padding: 0 10px;
            color: #6c757d;
        }


        .breadcrumb-item a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        .product-details {
            padding-left: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            padding: 20px;
        }

        .buy-now-btn {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .buy-now-btn:hover {
            background-color: #218838;

        }

        .footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
            <h3 style="color: whitesmoke;" class="mb-4">Product Details</h3>
        </nav>
    </div>
    <nav class="container-fluid" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/products/list">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <%= product.name %>
            </li>
        </ol>
    </nav>

    <!-- Product Details -->
    <div class="container">
        <div class="row ">
            <div class="col-md-6">
                <!-- Product Images -->
                <div class="thumbnail-container">
                    <% if (product.images.length> 0) { %>
                        <% product.images.forEach(image=> { %>
                            <img src="<%= image.url %>" alt="<%= image.description %>" class="thumbnail"
                                data-mfp-src="<%= image.url %>">
                            <% }); %>
                                <% } %>
                </div>
            </div>



            <div class="col-md-6 ">
                <div class="product-details">
                    <!-- Product Name -->
                    <h1>
                        <%= product.name %>
                    </h1>
                    <p class="product-description">
                        <%= product.description %>
                    </p>
                    <!-- Product Ratings -->
                    <div class="ratings">
                        <!-- Add ratings stars here -->
                    </div>
                    <!-- Product Price -->
                    <p style="color: red;"><strong>Offer Price:</strong>
                        <%= product.price %>
                    </p>

                    <p class="offer-price"><strong>Actual Price:</strong>
                        <%= product.originalPrice%>
                    </p>
                    <!-- Reviews -->
                    <div class="reviews">

                    </div>


                    <div class="product-buttons">
                        <button class="btn btn-primary wishlist-btn" onclick="addToWishlist('<%= product._id %>')">Add
                            to Wishlist</button>

                        <button class="btn btn-primary" onclick="addToCart('<%= product._id %>')">Add to
                            Cart</button>
                    </div>


                </div>
            </div>
        </div>

    </div>


    <footer class="footer">
        <div class="container-fluid">
            <!-- Add footer content and links here -->
            &copy; 2024 Audio Booth. All rights reserved.
        </div>
    </footer>

    <!-- Magnific Popup Script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.thumbnail').magnificPopup({
                type: 'image',
                gallery: {
                    enabled: true
                }
            });
        });


        async function addToCart(productId) {
            const quantity = 1;
            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId, quantity })
                });
                if (response.ok) {
                    // Product added successfully,
                    alert('Product added to cart successfully');
                } else {
                    // Failed to add product, handle the error
                    const data = await response.json();
                    alert(data.message); // Show the error message
                }
            } catch (error) {
                console.error('Error adding product to cart:', error);
                alert('Failed to add product to cart. Please try again later.');
            }
        }

        // function to add to wishlist
        async function addToWishlist(productId) {
            try {
                const response = await fetch('/wishlist/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ productId })
                });
                if (response.ok) {
                    alert('Product added to wishlist successfully');
                } else {
                    const data = await response.json();
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error adding product to wishlist:', error);
                alert('Failed to add product to wishlist. Please try again later.');
            }
        }


    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <!-- Include Zoom.js library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zoom.js/1.7.21/zoom.min.js"></script>
</body>

</html>